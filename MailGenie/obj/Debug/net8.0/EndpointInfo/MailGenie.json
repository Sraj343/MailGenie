{
  "openapi": "3.0.1",
  "info": {
    "title": "MailGenie",
    "version": "1.0"
  },
  "paths": {
    "/api/Mail/sendMail": {
      "post": {
        "tags": [
          "Mail"
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "fromFile": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              },
              "encoding": {
                "fromFile": {
                  "style": "form"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Mail/AddTemplate": {
      "post": {
        "tags": [
          "Mail"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EmailTemplate"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/EmailTemplate"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/EmailTemplate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "EmailTemplate": {
        "type": "object",
        "properties": {
          "templateId": {
            "type": "integer",
            "format": "int32"
          },
          "templateContent": {
            "type": "string",
            "nullable": true
          },
          "subjectContent": {
            "type": "string",
            "nullable": true
          },
          "templateType": {
            "type": "string",
            "nullable": true
          },
          "position": {
            "type": "string",
            "nullable": true
          },
          "createDate": {
            "type": "string",
            "format": "date-time"
          },
          "isActive": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    }
  }
}